<div class="container" style="margin:100px auto;">
  <form action="/admin/novedades/editar" method="post" enctype="multipart/form-data">
    <div class="row text-center m-5">
      <h1 class="col text-center">Editar novedad - Id: {{novedad.id}}</h1>
      <div class="col text-end">
        <a class="btn btn-success" href="/admin/novedades">
          <i class="bi bi-arrow-left-circle"></i>
          Volver
        </a>
      </div>
    </div>
    <div class="row">
      <input type="hidden" name="id" value="{{novedad.id}} " />
      <div class="col">
        <textarea
          type="text"
          class="form-control"
          placeholder="Titulo"
          name="titulo"
        >{{novedad.titulo}}</textarea>
      </div>
      <div class="col">
        <textarea
          type="text"
          class="form-control"
          placeholder="Subtitulo"
          name="subtitulo"
        >{{novedad.subtitulo}}</textarea>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <textarea
          name="cuerpo"
          rows="5"
          class="form-control"
          placeholder="Cuerpo"
        >{{novedad.cuerpo}}</textarea>
      </div>
    </div>
    <div class="row m-4">
      <button type="submit" class="btn btn-primary">Editar</button>
    </div>
  </form>
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{message}}
    </div>
  {{/if}}
</div>