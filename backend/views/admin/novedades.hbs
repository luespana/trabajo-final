<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-7"></div>
    <p class="text-end">
      Hola
      {{persona}}
      !
      <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion
        <i class="fas fa-sign-out-alt"></i>
      </a>
    </p>
  </div>
  <br />
  <div>
    <div class="row">
      <div class="col-7">
        <h2>Listado de Novedades</h2>
      </div>
      <div class="col-5 text-end">
        <a class="btn btn-success" href="/admin/novedades/agregar">
         <i class="bi bi-plus-circle"></i>  Nuevo
        </a>
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col">
      <table class="table table-dark">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Titulo</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr class="table-light">
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td class="text-end">
                <a href="/admin/novedades/editar/{{id}} " class="btn btn-sm btn-secondary">
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                  <i class="bi bi-trash-fill"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>